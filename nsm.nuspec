<?xml version="1.0" encoding="utf-8"?>
<package>
  <metadata>
    <id>nsm</id>
    <version>1.1</version>
    <packageSourceUrl>https://github.com/nifty-site-manager/nsm-chocolatey</packageSourceUrl>
    <owners>Nick Ham</owners>

    <!-- ============================== -->

    <title>nifty site manager</title>
    <authors>Nick Ham</authors>
    <projectUrl>https://nift.cc</projectUrl>
    <iconUrl>https://raw.githubusercontent.com/nifty-site-manager/nsm-chocolatey/master/icon.png</iconUrl>
    <copyright>2015-present</copyright>
    <licenseUrl>https://github.com/nifty-site-manager/nsm-chocolatey/blob/master/LICENSE</licenseUrl>
    <requireLicenseAcceptance>false</requireLicenseAcceptance>
    <projectSourceUrl>https://github.com/nifty-site-manager/nsm</projectSourceUrl>
    <docsUrl>https://nift.cc/documentation/nsm_commands.html</docsUrl>
    <bugTrackerUrl>https://github.com/nifty-site-manager/nsm-chocolatey/issues</bugTrackerUrl>
    <tags>nsm dynamic static site generator</tags>
    <dependencies>
        <dependency id="git" />
    </dependencies>
    <description>
      install: `choco install nsm`
		
      Nifty site manager (nsm or nift) is a cross-platform open source git-like 
      and LaTeX-like command-line dynamic and static site generator.
		
      See https://nift.cc

      **Please Note**: This is an automatically updated package. If you find it is 
      out of date by more than a day or two, please contact the maintainer(s) and
      let them know the package is no longer updating correctly.
    </description>
    <summary>dynamic and static site generator</summary>
    <releaseNotes>
      * Version 1.1 of Nift
      * fixed clone bug
      * fixed init bug
      * added windows flavoured del, copy and move commands
    </releaseNotes>
	
    <!-- =============================== -->      
  </metadata>
  <files>
    <file src="*" />
    <file src="tools\**" target="tools" />
  </files>
</package>
